{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Environment"
      }
    },
    "additional_host_name": {
      "type": "string",
      "defaultValue": "example",
      "metadata": {
        "description": "The hostname this application should be accessible on"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "UK South"
      ],
      "metadata": {
        "description": "Location of the App Service Environment"
      }
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "Environment Specific tag"
      }
    },
    "app_settings": {
      "type": "string"
    },
    "staging_app_settings": {
      "type": "string"
    },
    "stagingSlotName": {
      "type": "string",
      "defaultValue": "staging",
      "metadata": {
        "description": "Defines the name of the staging slot. (Default: staging)"
      }
    },
    "https_only": {
      "type": "string",
      "defaultValue": "false",
      "metadata": {
        "description": "Configures a web site to accept only https requests. Issues redirect for http requests"
      }
    },
    "web_sockets_enabled": {
      "type": "string",
      "defaultValue": "false",
      "metadata": {
        "description": "Configures a web site to accept websocket connections"
      }
    },
    "asp_id": {
      "type": "string"
    }
  },
  "variables": {
    "appSettings": "[base64ToJson(base64(parameters('app_settings')))]",
    "slotAppSettings": "[base64ToJson(base64(parameters('staging_app_settings')))]"
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "apiVersion": "2016-08-01",
      "tags": {
        "[concat('hidden-related:', parameters('asp_id'))]": "Resource",
        "displayName": "ASE-WEB-APP",
        "environment": "[parameters('env')]"
      },
      "dependsOn": [],
      "properties": {
        "name": "[parameters('name')]",
        "serverFarmId": "[parameters('asp_id')]",
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "1.8",
          "javaContainer": "TOMCAT",
          "javaContainerVersion": "8.0",
          "alwaysOn": true,
          "webSocketsEnabled": "[bool(parameters('web_sockets_enabled'))]"
        },
        "httpsOnly": "[bool(parameters('https_only'))]"
      },
      "resources": [
        {
          "name": "slotConfigNames",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('Name'))]"
          ],
          "tags": {
            "displayName": "slotConfigNames"
          },
          "properties": {
            "appSettingNames": [
              "SLOT"
            ]
          }
        },
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('name'))]"
          ],
          "properties": "[variables('appSettings')]"
        }
      ]
    },
    {
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('name'), '/', parameters('stagingSlotName'))]",
      "type": "Microsoft.Web/sites/slots",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
      ],
      "tags": {
        "displyName": "[concat(parameters('stagingSlotName'), ' Slot')]"
      },
      "location": "[parameters('location')]",
      "properties": {
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "1.8",
          "javaContainer": "TOMCAT",
          "javaContainerVersion": "8.0",
          "alwaysOn": true,
          "webSocketsEnabled": "[bool(parameters('web_sockets_enabled'))]"
        },
        "httpsOnly": "[bool(parameters('https_only'))]"
      },
      "resources": [
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('name'), '/slots/', parameters('stagingSlotName'))]"
          ],
          "properties": "[variables('slotAppSettings')]"
        }
      ]
    }
  ]
}