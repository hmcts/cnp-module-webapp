{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Environment"
      }
    },
    "is_frontend": {
      "defaultValue": "0",
      "type": "string"
    },
    "additional_host_name": {
      "type": "string",
      "defaultValue": "example",
      "metadata": {
        "description": "The hostname this application should be accessible on"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "UK South"
      ],
      "metadata": {
        "description": "Location of the App Service Environment"
      }
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "Environment Specific tag"
      }
    },
    "app_settings": {
      "type": "string"
    },
    "staging_app_settings": {
      "type": "string"
    },
    "stagingSlotName": {
      "type": "string",
      "defaultValue": "staging",
      "metadata": {
        "description": "Defines the name of the staging slot. (Default: staging)"
      }
    },
    "capacity": {
      "type": "string",
      "defaultValue": "2"
    },
    "https_only": {
      "type": "string",
      "defaultValue": "false",
      "metadata": {
        "description": "Configures a web site to accept only https requests. Issues redirect for http requests"
      }
    },
    "asp_name": {
      "type": "string"
    },
    "team_name": {
      "type": "string"
    },
    "team_contact": {
      "type": "string"
    },
    "tier": {
      "type": "string"
    },
    "destroy_me": {
      "type": "string"
    }  
  },
  "variables": {
    "base64AppSettingObject": "[base64(parameters('app_settings'))]",
    "base64SlotAppSettingObject": "[base64(parameters('staging_app_settings'))]",
    "trafficmanager": "[concat('hmcts-', parameters('name'),'.trafficmanager.net')]",
    "aspname": "[concat(parameters('asp_name'), '-asp')]",
    "additional_host_name_resource": "[concat(parameters('name'), '/', if(equals(parameters('additional_host_name'),''),'default',parameters('additional_host_name')))]",
    "aspResourceGroup": "[concat('mgmt-asp-', parameters('env'))]",
    "serverFarmName": "[if(contains(parameters('asp_name'), 'null'), parameters('name'), variables('aspname'))]",
    "serverFarmRG": "[if(contains(parameters('asp_name'), 'null'),  parameters('name'), variables('aspResourceGroup'))]",
    "serverFarmId": "[if(contains(parameters('asp_name'), 'null'), resourceId('Microsoft.Web/serverfarms', variables('serverFarmName')), resourceId(variables('aspResourceGroup'), 'Microsoft.Web/serverfarms', variables('serverFarmName')))]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('aspDeploy-', variables('serverFarmName'))]",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[variables('serverFarmRG')]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "name": "[variables('serverFarmName')]",
              "type": "Microsoft.Web/serverfarms",
              "location": "[parameters('location')]",
              "apiVersion": "2016-09-01",
              "tags": {
                "Display Name": "Application Service Plan",
                "Deployment Environment": "[parameters('env')]",
                "Team Name": "[parameters('team_name')]",
                "Team Contact": "[parameters('team_contact')]",
                "Destroy Me": "[parameters('destroy_me')]"
              },
              "properties": {
                "name": "[variables('serverFarmName')]",
                "hostingEnvironment": "[concat('core-compute-', parameters('env'))]",
                "hostingEnvironmentId": "[resourceId('Microsoft.Web/hostingEnvironments', concat('core-compute-', parameters('env')))]"
              },
              "sku": {
                "name": "I2",
                "tier": "Isolated",
                "size": "I2",
                "family": "I",
                "capacity": "[parameters('capacity')]"
              }
            }
          ]
        }
      }
    },
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "apiVersion": "2016-08-01",
      "tags": {
        "[concat('hidden-related:', variables('serverFarmId'))]": "Resource",
        "DisplayName": "ASE-WEB-APP",
        "Deployment Environment": "[parameters('env')]",
        "Team Name": "[parameters('team_name')]",
        "Team Contact": "[parameters('team_contact')]",
        "Tier": "[parameters('tier')]",
        "Destroy Me": "[parameters('destroy_me')]"
      },
      "dependsOn": [
        "[concat('aspDeploy-', variables('serverFarmName'))]"
      ],
      "properties": {
        "name": "[parameters('name')]",
        "serverFarmId": "[variables('serverFarmId')]",
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "1.8",
          "javaContainer": "TOMCAT",
          "javaContainerVersion": "8.0",
          "alwaysOn": true
        },
        "httpsOnly": "[bool(parameters('https_only'))]"
      },
      "resources": [
        {
          "name": "[concat('tm', parameters('additional_host_name'))]",
          "condition": "[not(equals(parameters('is_frontend'), '0'))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {
            "Deployment Environment": "[parameters('env')]",
            "Team Name": "[parameters('team_name')]",
            "Team Contact": "[parameters('team_contact')]",
            "Tier": "[parameters('tier')]",
            "Destroy Me": "[parameters('destroy_me')]"
          },
          "properties": {
            "siteName": "[concat('tm', parameters('additional_host_name'))]",
            "hostNameType": "Verified"
          },
          "dependsOn": [
            "[parameters('name')]"
          ]
        },
        {
          "name": "[parameters('additional_host_name')]",
          "condition": "[not(equals(parameters('is_frontend'), '0'))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {
            "Deployment Environment": "[parameters('env')]",
            "Team Name": "[parameters('team_name')]",
            "Team Contact": "[parameters('team_contact')]",
            "Destroy Me": "[parameters('destroy_me')]"
          },
          "properties": {
            "siteName": "[parameters('additional_host_name')]",
            "hostNameType": "Verified"
          },
          "dependsOn": [
            "[parameters('name')]",
            "[concat('tm', parameters('additional_host_name'))]"
          ]
        },
        {
          "name": "[variables('trafficmanager')]",
          "condition": "[not(equals(parameters('is_frontend'), '0'))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {
            "Deployment Environment": "[parameters('env')]",
            "Team Name": "[parameters('team_name')]",
            "Team Contact": "[parameters('team_contact')]",
            "Destroy Me": "[parameters('destroy_me')]"
          },
          "properties": {
            "siteName": "[variables('trafficmanager')]",
            "hostNameType": "Verified"
          },
          "dependsOn": [
            "[parameters('name')]",
            "[parameters('additional_host_name')]"
          ]
        },
        {
          "name": "slotConfigNames",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('Name'))]"
          ],
          "tags": {
            "Display Name": "slotConfigNames",
            "Deployment Environment": "[parameters('env')]",
            "Team Name": "[parameters('team_name')]",
            "Team Contact": "[parameters('team_contact')]",
            "Tier": "[parameters('tier')]",
            "Destroy Me": "[parameters('destroy_me')]"
          },
          "properties": {
            "appSettingNames": [
              "SLOT"
            ]
          }
        },
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('name'))]"
          ],
          "properties": "[base64ToJson(variables('base64AppSettingObject'))]"
        }
      ]
    },
    {
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('name'), '/', parameters('stagingSlotName'))]",
      "type": "Microsoft.Web/sites/slots",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
      ],
      "tags": {
        "Display Name": "[concat(parameters('stagingSlotName'), ' Slot')]",
        "Deployment Environment": "[parameters('env')]",
        "Team Name": "[parameters('team_name')]",
        "Team Contact": "[parameters('team_contact')]",
        "Tier": "[parameters('tier')]",
        "Destroy Me": "[parameters('destroy_me')]"
      },
      "location": "[parameters('location')]",
      "properties": {
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "1.8",
          "javaContainer": "TOMCAT",
          "javaContainerVersion": "8.0",
          "alwaysOn": true
        },
        "httpsOnly": "[bool(parameters('https_only'))]"
      },
      "resources": [
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('name'), '/slots/', parameters('stagingSlotName'))]"
          ],
          "properties": "[base64ToJson(variables('base64SlotAppSettingObject'))]"
        }
      ]
    }
  ]
}