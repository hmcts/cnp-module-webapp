{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Environment"
      }
    },
    "is_frontend": {
      "defaultValue": "0",
      "type": "string"
    },
    "additional_host_name": {
      "type": "string",
      "defaultValue": "example",
      "metadata": {
        "description": "The hostname this application should be accessible on"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "UK South"
      ],
      "metadata": {
        "description": "Location of the App Service Environment"
      }
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "Environment Specific tag"
      }
    },
    "app_settings": {
      "type": "string"
    },
    "staging_app_settings": {
      "type": "string"
    },
    "stagingSlotName": {
      "type": "string",
      "defaultValue": "staging",
      "metadata": {
        "description": "Defines the name of the staging slot. (Default: staging)"
      }
    },
    "capacity": {
      "type": "string",
      "defaultValue": "2"
    },
    "https_only": {
      "type": "string",
      "defaultValue": "false",
      "metadata": {
        "description": "Configures a web site to accept only https requests. Issues redirect for http requests"
      }
    },
    "web_sockets_enabled": {
      "type": "string",
      "defaultValue": "false",
      "metadata": {
        "description": "Configures a web site to accept websocket connections"
      }
    },
    "asp_name": {
      "type": "string",
      "defaultValue": "null"
    },
    "asp_rg": {
      "type": "string",
      "defaultValue": "[parameters('name')]"
    },
    "instance_size": {
      "type": "string",
      "allowedValues": [
        "I1",
        "I2",
        "I3"
      ],
      "metadata": {
        "description": "The SKU size for app service plan instances"
      }
    },
    "teamName": {
      "type": "string"
    },
    "java_version": {
      "type": "string"
    },
    "java_container_type": {
      "type": "string"
    },
    "java_container_version": {
      "type": "string"
    },
    "storageAccountSkuName": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "The name of the App Service Plan."
      }
    },
    "storageAccountKind": {
      "type": "string",
      "defaultValue": "StorageV2",
      "metadata": {
        "description": "The name of the Storage Account Type."
      }
    },
    "diagnosticsLogsLevel": {
      "type": "string",
      "defaultValue": "Error",
      "allowedValues": [
        "Verbose",
        "Information",
        "Warning",
        "Error"
      ],
      "metadata": {
        "description": "The degree of severity for diagnostics logs."
      }
    },
    "diagnosticsLogsRetentionInDays": {
      "type": "int",
      "defaultValue": 90,
      "metadata": {
        "description": "Number of days for which the diagnostics logs will be retained."
      }
    },
    "sasExpiryDate": {
      "type": "string",
      "metadata": {
        "description": "End date of the sasUrl token"
      }
    }
  },
  "variables": {
    "base64AppSettingObject": "[base64(parameters('app_settings'))]",
    "base64SlotAppSettingObject": "[base64(parameters('staging_app_settings'))]",
    "trafficmanager": "[concat('hmcts-', parameters('name'),'.trafficmanager.net')]",
    "serverFarmId": "[ResourceId(parameters('asp_rg'),'Microsoft.Web/serverfarms', parameters('asp_name'))]",
    "blobContainerName": "[concat('applogs-',parameters('name'))]",
    "httpLogsBlobContainerName": "[concat('httplogs-',parameters('name'))]",
    "storageAccountName": "[concat('webapplogs', uniqueString(resourceGroup().id))]",
    "serviceSasProperties": {
      "canonicalizedResource": "[concat('/blob/', variables('storageAccountName'),'/',variables('blobContainerName'))]",
      "signedResource": "c",
      "signedPermission": "rwdl",
      "signedstart": "2017-08-20T11:00:00Z",
      "signedExpiry": "[parameters('sasExpiryDate')]"
    }
  },
  "resources": [{
      "apiVersion": "2018-02-01",
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('storageAccountSkuName')]"
      },
      "kind": "[parameters('storageAccountKind')]",
      "resources": [
        {
          "name": "[concat('default/', variables('blobContainerName'))]",
          "type": "blobServices/containers",
          "apiVersion": "2018-02-01",
          "dependsOn": [
            "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
          ],
          "properties": {
            "publicAccess": "Blob"
          }
        }, {
          "name": "[concat('default/', variables('httpLogsBlobContainerName'))]",
          "type": "blobServices/containers",
          "apiVersion": "2018-02-01",
          "dependsOn": [
            "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
          ],
          "properties": {
            "publicAccess": "Blob"
          }
        }
      ]
    }, {
      "apiVersion": "2017-05-10",
      "name": "[concat('aspDeploy-', parameters('asp_name'))]",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('asp_rg')]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [{
            "name": "[parameters('asp_name')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "apiVersion": "2016-09-01",
            "tags": {
              "displayName": "Application Service Plan",
              "environment": "[parameters('env')]",
              "Team Name": "[parameters('teamName')]"
            },
            "properties": {
              "name": "[parameters('asp_name')]",
              "hostingEnvironment": "[concat('core-compute-', parameters('env'))]",
              "hostingEnvironmentId": "[resourceId('Microsoft.Web/hostingEnvironments', concat('core-compute-', parameters('env')))]"
            },
            "sku": {
              "name": "[parameters('instance_size')]",
              "tier": "Isolated",
              "size": "[parameters('instance_size')]",
              "family": "I",
              "capacity": "[parameters('capacity')]"
            }
          }]
        }
      }
    },
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "apiVersion": "2016-08-01",
      "tags": {
        "[concat('hidden-related:', variables('serverFarmId'))]": "Resource",
        "displayName": "ASE-WEB-APP",
        "environment": "[parameters('env')]",
        "Team Name": "[parameters('teamName')]"
      },
      "properties": {
        "name": "[parameters('name')]",
        "serverFarmId": "[variables('serverFarmId')]",
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "[parameters('java_version')]",
          "javaContainer": "[parameters('java_container_type')]",
          "javaContainerVersion": "[parameters('java_container_version')]",
          "alwaysOn": true,
          "webSocketsEnabled": "[bool(parameters('web_sockets_enabled'))]"
        },
        "clientAffinityEnabled": false,
        "httpsOnly": "[bool(parameters('https_only'))]"
      },
      "resources": [{
          "name": "[concat('tm', parameters('additional_host_name'))]",
          "condition": "[not(contains(createArray('', 'null', 'false'), parameters('additional_host_name')))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {},
          "properties": {
            "siteName": "[concat('tm', parameters('additional_host_name'))]",
            "hostNameType": "Verified"
          },
          "dependsOn": [
            "[parameters('name')]"
          ]
        },
        {
          "name": "[parameters('additional_host_name')]",
          "condition": "[not(contains(createArray('', 'null', 'false'), parameters('additional_host_name')))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {},
          "properties": {
            "siteName": "[parameters('additional_host_name')]",
            "hostNameType": "Verified"
          },
          "dependsOn": [
            "[parameters('name')]",
            "[concat('tm', parameters('additional_host_name'))]"
          ]
        },
        {
          "name": "[variables('trafficmanager')]",
          "condition": "[not(contains(createArray('', 'null', 'false'), parameters('additional_host_name')))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {},
          "properties": {
            "siteName": "[variables('trafficmanager')]",
            "hostNameType": "Verified"
          },
          "dependsOn": [
            "[parameters('name')]",
            "[parameters('additional_host_name')]"
          ]
        },
        {
          "name": "slotConfigNames",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('Name'))]"
          ],
          "tags": {
            "displayName": "slotConfigNames",
            "Team Name": "[parameters('teamName')]"
          },
          "properties": {
            "appSettingNames": [
              "SLOT",
              "WEBSITE_LOCAL_CACHE_OPTION",
              "WEBSITE_LOCAL_CACHE_SIZEINMB"
            ],
            "dependsOn": [
              "[concat('Microsoft.Web/sites/', parameters('Name'))]"
            ]
          }
        },
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('Name'))]",
            "[concat('Microsoft.Web/sites/', parameters('name'), '/config/slotConfigNames')]"
          ],
          "properties": "[base64ToJson(variables('base64AppSettingObject'))]"
        },
        {
          "apiVersion": "2018-02-01",
          "type": "config",
          "name": "logs",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('Name'))]"
          ],
          "properties": {
            "applicationLogs": {
              "azureBlobStorage": {
                "level": "[parameters('diagnosticsLogsLevel')]",
                "sasUrl": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/',variables('blobContainerName'),'?',listServiceSas(variables('storageAccountName'), '2018-07-01', variables('serviceSasProperties')).serviceSasToken)]",
                "retentionInDays": "[parameters('diagnosticsLogsRetentionInDays')]"
              }
            },
            "httpLogs": {
              "azureBlobStorage": {
                "enabled": true,
                "sasUrl": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/',variables('httpLogsBlobContainerName'),'?',listServiceSas(variables('storageAccountName'), '2018-07-01', variables('serviceSasProperties')).serviceSasToken)]",
                "retentionInDays": "[parameters('diagnosticsLogsRetentionInDays')]"
              }
            }
          }
        }
      ]
    },
    {
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('name'), '/', parameters('stagingSlotName'))]",
      "type": "Microsoft.Web/sites/slots",
      "dependsOn": [
        "[concat('Microsoft.Web/sites/', parameters('Name'))]",
        "[concat('Microsoft.Web/sites/', parameters('name'), '/config/appsettings')]"
      ],
      "tags": {
        "displyName": "[concat(parameters('stagingSlotName'), ' Slot')]",
        "Team Name": "[parameters('teamName')]"
      },
      "location": "[parameters('location')]",
      "properties": {
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "[parameters('java_version')]",
          "javaContainer": "[parameters('java_container_type')]",
          "javaContainerVersion": "[parameters('java_container_version')]",
          "alwaysOn": true,
          "webSocketsEnabled": "[bool(parameters('web_sockets_enabled'))]"
        },
        "clientAffinityEnabled": false,
        "httpsOnly": "[bool(parameters('https_only'))]"
      },
      "resources": [{
        "apiVersion": "2016-08-01",
        "name": "appsettings",
        "type": "config",
        "dependsOn": [
          "[concat('Microsoft.Web/sites/', parameters('name'), '/slots/', parameters('stagingSlotName'))]"
        ],
        "properties": "[base64ToJson(variables('base64SlotAppSettingObject'))]"
      }]
    }
  ]
}