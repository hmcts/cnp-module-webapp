{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service Environment"
      }
    },
    "hostnames": {
      "type": "array",
      "metadata": {
        "description": "The hostnames this application should be accessible on"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "UK South"
      ],
      "metadata": {
        "description": "Location of the App Service Environment"
      }
    },
    "env": {
      "type": "string",
      "metadata": {
        "description": "Environment Specific tag"
      }
    },
    "app_settings": {
      "type": "string"
    },
    "stagingSlotName": {
      "type": "string",
      "defaultValue": "staging",
      "metadata": {
        "description": "Defines the name of the staging slot. (Default: staging)"
      }
    }
  },
  "variables": {
    "base64AppSettingObject": "[base64(parameters('app_settings'))]"
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "apiVersion": "2016-09-01",
      "tags": {
        "displayName": "Application Service Plan",
        "environment": "[parameters('env')]"
      },
      "properties": {
        "name": "[parameters('name')]",
        "hostingEnvironment": "[concat('core-compute-', parameters('env'))]",
        "hostingEnvironmentId": "[resourceId('Microsoft.Web/hostingEnvironments', concat('core-compute-', parameters('env')))]"
      },
      "sku": {
        "name": "I2",
        "tier": "Isolated",
        "size": "I2",
        "family": "I",
        "capacity": 2
      }
    },
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "apiVersion": "2016-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('name'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('name')))]": "Resource",
        "displayName": "ASE-WEB-APP",
        "environment": "[parameters('env')]"
      },
      "properties": {
        "name": "[parameters('name')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('name'))]",
        "hostingEnvironment": "[concat('core-compute-', parameters('env'))]",
        "hostingEnvironmentId": "[resourceId('Microsoft.Web/hostingEnvironments', concat('core-compute-', parameters('env')))]",
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "1.8",
          "javaContainer": "TOMCAT",
          "javaContainerVersion": "8.0"
        }
      },
      "resources": [
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('name'))]"
          ],
          "properties": "[base64ToJson(variables('base64AppSettingObject'))]"
        },
        {
          "name": "parameters('hostnames'))]",
          "type": "hostNameBindings",
          "apiVersion": "2016-08-01",
          "location": "[parameters('location')]",
          "tags": {},
          "properties": {
            "siteName": "[parameters('hostnames[0]')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('name'))]"
          ]
        }
      ]
    },
    {
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('name'), '/', parameters('stagingSlotName'))]",
      "type": "Microsoft.Web/sites/slots",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('name'))]"
      ],
      "tags": {
        "displyName": "[concat(parameters('stagingSlotName'), ' Slot')]"
      },
      "location": "[parameters('location')]",
      "properties": {
        "siteConfig": {
          "use32BitWorkerProcess": false,
          "detailedErrorLoggingEnabled": true,
          "scmType": "LocalGit",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": 35,
          "javaVersion": "1.8",
          "javaContainer": "TOMCAT",
          "javaContainerVersion": "8.0"
        }
      },
      "resources": [
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('name'), '/slots/', parameters('stagingSlotName'))]"
          ],
          "properties": "[base64ToJson(variables('base64AppSettingObject'))]"
        }
      ]
    }
  ]
}